{
  "compilerOptions": {
    "outDir": "./dist/public/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,

    "module": "es2015",
    "baseUrl": "./"
  },
  "files": [
    "client/app/features/login/login.module.ts",
    "client/app/features/login/login-routing.module.ts",

    "client/app/core/core.module.ts",

    "client/app/shared/shared.module.ts",

    "client/app/app.module.ts",
    "client/app/app-routing.module.ts",

    "client/main-aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist/public",
    "skipMetadataEmit" : true,
    "collectAllErrors": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": false
  }
}
